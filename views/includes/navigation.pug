append header
  nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
    a.navbar-brand(href='/') Tabletop Gamers Network
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarCollapse' aria-controls='navbarCollapse' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarCollapse.collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item(class=(name === 'index' ? 'active' : 'undefined') )
          a.nav-link(href='/' id="home")
            | Home
            span.sr-only (current)
        li.nav-item(class=(name === 'about' ? 'active' : 'undefined') )
          a.nav-link(href='/about') About
        li.nav-item(class=(name === 'games' ? 'active' : 'undefined') )
          a.nav-link(href='/games') Games
      form.form-inline.mt-2.mt-md-0
        input.form-control.mr-sm-2(type='text' placeholder='Search' aria-label='Search')
        button.btn.btn-outline-warning.my-2.my-sm-0(type='submit') Search
        | &nbsp;&nbsp;&nbsp;
      a#signin.fa.fa-user(href='#' aria-disabled='false') &nbsp;&nbsp;Login
